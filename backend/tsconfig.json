{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"] // Optional: Explicitly include Node.js types
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "types/**/*.d.ts"], // Include types folder
  "exclude": ["node_modules", "dist"]
}