{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "NodeNext", // Keep NodeNext for modern Node.js resolution
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true // Enable if using JSON imports
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}